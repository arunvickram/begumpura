<fieldset>
  <label>
    Email
    <input
      required
      type="text"
      name="email"
      value="<.email>"
      hx-post="/users/register/validate"
      hx-target="closest fieldset"
      hx-swap="outerHTML"
      hx-trigger="change"
      aria-invalid="<.validation.email.invalid>"
      aria-describedby="valid-helper"
    />
    <small id="valid-helper"><.validation.email.message></small>
  </label>
  <label>
    Password
    <input 
      required
      type="password" 
      name="password" 
      placeholder="Password" 
      aria-label="Password" 
    />
  </label>
</fieldset>